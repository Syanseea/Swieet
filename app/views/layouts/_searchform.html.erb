
<%= form_with url: search_path, method: :get, local: :true do |f| %>
<div class="wraps mt-4">
   <div class="search">
      <%= f.text_field :word,class:"searchTerm", placeholder:"ユーザーや投稿を検索" %>
      <%= button_tag(type: "submit", class: "searchButton") do %>
        <i class="fa fa-search"></i>
      <% end %>
   </div>
</div>
<% end %>



