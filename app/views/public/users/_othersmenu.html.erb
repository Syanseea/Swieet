<%#othersのメニュー一覧、公開にしているメニューのみ公開される%>
<div class="row mb-4">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>作成日時</th>
          <th>Menuタイトル</th>
          <th>Total Distance</th>
        </tr>
      </thead>
      <tbody>
        <% menus.each do |menu| %>
        <tr>

          <td>
            <%= link_to menu_path(menu) do %>
              <%= l menu.created_at %>
            <% end %>
          </td>
          <td>
            <%= link_to menu_path(menu) do %>
              <%= menu.title %>
            <% end %>
          </td>
          <td>
            <% @sum = 0 %>
            <% menu.themes.each do |theme| %>
              <% theme.contents.each do |content| %>
                <% @sum += content.sum_meters %>
              <% end %>
            <% end %>
            <%= @sum %>m
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
     <div class="mx-auto mt-1">
       <%= paginate menus %>
     </div>
</div>