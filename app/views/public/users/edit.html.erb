<div class="container px-5 px-sm-0">
  <div class="row">
    <% #サイドバー %>
    <div class="col-md-3 mt-4">
       <% #投稿フォーム%>
      <%= render 'public/posts/form', post: @post1 %>
    </div>
    <div class="col-md-8 offset-md-1">

      <div class="row">
        <div class="col-md-4">
          <h2 class="mt-4 rounded-lg border border-dark text-center">Profile Edit</h2>
        </div>
      </div>

       <div class="row">
          <div class="col rounded-lg border border-dark">
            <%= form_with model:@user, local:true do |f| %>
              <div class="form-group mt-3">
                <b><%= f.label :"Nick Name" %></b>
                <%= f.text_field :name, class: "form-control name" %>
              </div>
              <div class="form-group">
                <b><%= f.label :"Profile Image"%></b>
                <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
              </div>
              <div class="form-group">
                <b><%= f.label :"Introduction" %></b>
                <%= f.text_area :introduction, class: "form-control introduction" %>
              </div>
              <div class="form-group">
                <%= f.submit class: 'btn btn-secondary' %>
              </div>
            <% end %>