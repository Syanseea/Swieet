<div class="container-fluid px-sm-0">
    <div class="row">
      <% #サイドバー %>
      <div class="col-md-3 px-5 sidebar-bg">
         <% #サイドバー %>

        <%= render 'public/posts/form', post: @post1 %>

      </div>

      <div class="col-md-9 px-5 sns-bg">

     <div class="row">
        <div class="col-md-8">
          <h2 class="mt-4 topic-main">Profile Edit</h2>
        </div>
      </div>

      <div class="row mb-2 mx-5 mt-4 font-default">
        <div class="col rounded-lg border border-dark">
     　　<%= render 'layouts/error_messages', object:@user %>
          <%= form_with model:@user, local:true do |f| %>
            <div class="form-group mt-3">
              <b><%= f.label :"Nick Name" %></b>
              <%= f.text_field :name, class: "form-control name" %>
            </div>
            <div class="form-group">
              <b><%= f.label :"Profile Image"%></b>
              <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
            </div>
            <div class="form-group">
              <b><%= f.label :"Introduction" %></b>
              <%= f.text_area :introduction, class: "form-control introduction" %>
            </div>
            <div class="form-group text-center">
              <%= f.submit class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>