
<h2 class="rounded-lg border border-dark text-center">New Post</h2>

  <div class="rounded-lg border border-dark">
  
  <%= form_with model:post, local:true do |f| %>
  
    <div class="form-group mt-2 mx-1">
      <b><%= f.label :"Title" %></b>
      <%= f.text_field :title, class: 'form-control post_title' %>
    </div>
  
    <div class="form-group mx-1">
      <b><%= f.label :"Content" %></b>
      <%= f.text_area :content, class: 'form-control post_content' %>
    </div>
  
    <div class="form-group text-center mx-1">
      <%= f.submit "Swieet", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

</div>