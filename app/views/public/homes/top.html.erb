<div class="container-fluid">

<% #カルーセル %>
  <div class="row mt-4">
    <div class="top-carousel">
    <div id="carouselExampleIndicators" class="carousel slide" data-interval=5000 data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag '1.png' %>
        </div>
        <div class="carousel-item">
          <%= image_tag '2.png' %>
        </div>
        <div class="carousel-item">
          <%= image_tag '3.png' %>
        </div>
        <div class="carousel-item">
          <%= image_tag '4.png' %>
        </div>
      </div>
    </div>
    </div>
  </div>
  <div class="row">
    <%= image_tag 'flag.png', style:"width: 100%;"%>
  </div>

<div class="row mx-4 mt-5">
  <div class="col-md-4 offset-md-2">
  <%= link_to(new_user_session_path) do %>
    <button type="button" class="font-top btn"><%= image_tag 'boy.png' %><br><h4><b>ログイン・ゲストの方はこちらから</b></h4></button>
  <% end %>
  </div>
  <div class="col-md-5 mt-3 offset-md-1">
  <%= link_to(new_user_registration_path) do %>
    <button type="button" class="font-top btn"><%= image_tag 'girl.png' %><br><h4><b>新規登録の方はこちら</b></h4></button>
  <% end %>
  </div>
</div>

