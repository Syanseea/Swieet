<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-4 rounded-lg border border-dark text-center">会員一覧</h2>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Profile Image</th>
          <th>Name</th>
          <th>E-mail</th>
          <th>Introduction</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <th><%= user.id %></th>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.introduction %></td>
          <td>
            <%= link_to admin_user_path(user), method: :delete, data: { confirm: '本当にBanしますか？' } do %>
              <button type="button" class="btn btn-danger">ユーザーをBanする</button>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row mt-1 d-flex align-items-center justify-content-center">
    <%= paginate @users %>
    </div>
  </div>
</div>